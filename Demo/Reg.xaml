<Page x:Class="Demo.Reg"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Demo"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Reg">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <GroupBox Header="Введите регистрационные данные" HorizontalAlignment="Center" VerticalAlignment="Center" Width="350" Height="150">
                <StackPanel>
                    <GroupBox Header="Введите логин">
                        <TextBox x:Name="txtLogin"></TextBox>
                    </GroupBox>
                    <GroupBox Header="Введите пароль">
                        <TextBox x:Name="txtPass"></TextBox>
                    </GroupBox>
                </StackPanel>
            </GroupBox>
            <Button x:Name="btnAvtor" Content="Авторизоваться" HorizontalAlignment="Center" Width="210" Height="22" Click="btnAvtor_Click" ></Button>
            <Button x:Name="btnReg" Content="Зарегистрироваться" HorizontalAlignment="Center" Width="210" Height="22"></Button>
        </StackPanel>
    </Grid>
</Page>
